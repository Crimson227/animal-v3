<div class="page-header">
    <div class="controls-wrapper">
        <label style="margin:0; margin-right: 10px;">状态筛选:</label>
        <select class="dropdown-wrapper">
            <option value="All" selected>全部</option>
            <option value="Fostered">寄养中</option>
            <option value="Adopters">已领养</option>
        </select>
    </div>
    <button id="add-btn" class="add-btn"><i class="fa-solid fa-plus"></i> 添加记录</button>
</div>

<div class="content-card">
    <table id="fosters-and-adoptions-table">
        <tr class="table-header">
            <th>动物名称</th>
            <th>领养/寄养人</th>
            <th>当前状态</th>
            <th>生效日期</th>
        </tr>
        {{#each faaData}}
        {{> fosters_and_adoptionsTableRow}}
        {{/each}}
    </table>
</div>

<div id="info-modal" class="hidden modal-skeleton">
    <div class="modal-contents">
        <h2 style="margin-bottom: 20px; color: var(--primary-color);">记录详情</h2>
        <div class="modal-body">
            <div id="fosters-adoptions-info">
                <p class="label id">动物编号</p>
                <p class="data id"></p>
                <p class="label name">动物名称</p>
                <p class="data name"></p>

                <p class="label patronID">人员编号</p>
                <p class="data patronID"></p>
                <p class="label patronName">人员姓名</p>
                <p class="data patronName"></p>

                <p class="label foster-adopt-status">状态变更</p>
                <select id="foster-adopt-dropdown" class="data dropdown-wrapper" style="width:100%">
                    <option value="F" selected>寄养</option>
                    <option value="A">领养</option>
                </select>

                <p class="label date">日期</p>
                <p class="data date"></p>
            </div>
            <div class="animal-img-wrapper">
                <img class="animal-modal-img" src="" alt="动物照片">
            </div>
        </div>
        <div class="modal-btn-wrapper">
            <button class="close-modal-btn modal-btn btn-secondary">关闭</button>
            <button id="update-btn" class="modal-btn btn-primary">更新状态</button>
            <button id="delete-btn" class="modal-btn btn-danger">删除记录</button>
        </div>
    </div>
</div>

<div id="add-foster-adoption-modal" class="hidden modal-skeleton">
    <div class="modal-contents">
        <h2 style="margin-bottom: 20px; color: var(--primary-color);">新增寄养/领养</h2>
        <div class="modal-body">
            <div id="foster-adoption-input">
                <p class="label animalID">动物编号</p>
                <p class="data animalID" style="background:#eee; padding:10px; border-radius:5px;">0</p>

                <p class="label name">选择动物</p>
                <select id="animal-dropdown" class="dropdown-wrapper" style="width:100%">
                    {{#each animals}}
                    <option value="{{this.animalID}}">{{this.animalName}}</option>
                    {{/each}}
                </select>

                <p class="label patronID">人员编号</p>
                <p class="data patronID" style="background:#eee; padding:10px; border-radius:5px;">0</p>

                <p class="label patron">选择人员</p>
                <select id="patron-dropdown" class="dropdown-wrapper" style="width:100%">
                    {{#each patrons}}
                    <option value="{{this.patronID}}">{{this.firstName}} {{this.lastName}}</option>
                    {{/each}}
                </select>

                <p class="label foster-adopt-status">类型</p>
                <select id="add-fosterAdopt-dropdown" class="dropdown-wrapper" style="width:100%">
                    <option value="F" selected>寄养</option>
                    <option value="A">领养</option>
                </select>
            </div>
            <div class="animal-img-wrapper">
                <img class="animal-modal-img" src="" alt="动物照片">
            </div>
        </div>
        <div class="modal-btn-wrapper">
            <button class="close-modal-btn modal-btn btn-secondary">取消</button>
            <button id="confirm-btn" class="modal-btn btn-primary">确认添加</button>
        </div>
    </div>
</div>